{% extends '@DdrDoctrine/base.html.twig' %}

{% block ddr_doctrine_entity_content %}
    <div class="ddr-page-header d-flex">
        <h1 class="ddr-content">{{ title }}</h1>
        <div class="ddr-actions">
            <div class="dropdown">
                <a href="#" class="dropdown-toggle ddr-no-caret" data-toggle="dropdown">
                    <span class="fas fa-fw fa-ellipsis-v"></span>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    {% if is_granted('UPDATE', entity) %}
                        <a class="dropdown-item" href="{{ path(routes.edit,{'id':attribute(entity, idProperty)}) }}">
                            <span class="fas fa-fw fa-pen mr-1"></span>Edit
                        </a>
                    {% endif %}
                    {% if is_granted('DELETE', entity) %}
                        <a class="dropdown-item" href="{{ path(routes.delete,{'id':attribute(entity, idProperty)}) }}">
                            <span class="fas fa-fw fa-trash-alt mr-1"></span>Delete
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <dl class="dl-horizontal ddr-doctrine-entity-detail">
        {% for field,displayName in fields %}
            <dt class="{{ field }}-description">{{ displayName }}</dt>
            <dd class="{{ field }}">{{ attribute(entity, field) }}</dd>
        {% endfor %}
    </dl>
{% endblock ddr_doctrine_entity_content %}
