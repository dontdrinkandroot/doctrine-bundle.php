{% extends '@DdrDoctrine/base.html.twig' %}

{% block ddr_doctrine_entity_content %}
    <div class="page-header">
        <div class="pull-right">
            {% if is_granted('UPDATE', entity) %}
                <a class="btn btn-primary action edit" href="{{ path(routes.edit,{'id':entity.id}) }}">
                    <i class="fa fa-pencil"></i>
                </a>
            {% endif %}
            {% if is_granted('DELETE', entity) %}
                <a class="btn btn-outline-danger action delete" href="{{ path(routes.delete,{'id':entity.id}) }}">
                    <i class="fa fa-trash-o"></i>
                </a>
            {% endif %}
        </div>
        <h1>{{ entity.id }}</h1>
    </div>

    <dl class="dl-horizontal">
        {% for field,displayName in fields %}
            <dt class="{{ field }}-description">{{ displayName }}</dt>
            <dd class="{{ field }}">{{ attribute(entity, field) }}</dd>
        {% endfor %}
    </dl>
{% endblock ddr_doctrine_entity_content %}
