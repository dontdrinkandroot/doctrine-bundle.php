{% extends '@DdrDoctrine/base.html.twig' %}

{% block ddr_doctrine_entity_content %}
    <div class="page-header border-bottom pt-3 mb-3">
        <div class="pull-right">
            <a class="btn btn-primary action create" href="{{ path(routes.edit,{'id':'new'}) }}">
                <i class="fa fa-plus"></i>
            </a>
        </div>
        <h1>List</h1>
    </div>

    <div class="pull-right">
        {{ ddr_pagination(pagination, app.request) }}
    </div>

    <table class="table table-sm">
        <thead>
        <tr>
            {% for field,displayName in fields %}
                <th class="{{ field }}">{{ displayName }}</th>
            {% endfor %}
            <th class="actions">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                {% for field, displayName in fields %}
                    <td class="{{ field }} align-middle">{{ attribute(entity,field) }}</td>
                {% endfor %}
                <td class="actions">
                    <a href="{{ path(routes.detail,{'id':entity.uuid}) }}" class="btn btn-sm btn-outline-secondary action detail">
                        <i class="fa fa-search"></i>
                    </a>
                    <a href="{{ path(routes.edit,{'id':entity.uuid}) }}" class="btn btn-sm btn-outline-secondary action edit">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a href="{{ path(routes.delete,{'id':entity.uuid}) }}" class="btn btn-sm btn-outline-secondary action delete">
                        <i class="fa fa-trash-o"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock ddr_doctrine_entity_content %}
